@using Index = WeChatApp.AdminClient.Pages.Index
<MListItem TwoLine>
    <MListItemContent>
        <MListItemSubtitle>
            <MVirtualScroll TItem="Index.TaskAndNode" Height="400"
                            OverscanCount="5"
                            Items="Data" Class="scrollbar-g">
                <ItemContent>
                    <MListItem TwoLine Style="height: 16px;">
                        <MListItemAvatar>
                            <MImage Src="@(GetIcon(@context.WorkTask.Status))"></MImage>
                        </MListItemAvatar>
                        <MListItemContent>
                            <MListItemTitle>@(@context.WorkTask.Title ?? "任务异常")</MListItemTitle>
                            <MListItemSubtitle>@(@context.Node.Title ?? "任务异常")</MListItemSubtitle>
                        </MListItemContent>
                    </MListItem>
                    <MDivider Inset="true"></MDivider>
                </ItemContent>
            </MVirtualScroll>
        </MListItemSubtitle>
    </MListItemContent>
</MListItem>