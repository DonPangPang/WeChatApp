<MTooltip Bottom>
    <ActivatorContent>
        <span @attributes="@context.Attrs"
              class="d-inline-block text-truncate"
              style="width: 100%; cursor: auto; vertical-align: top">@Value</span>
    </ActivatorContent>
    <ChildContent>
        <span >@Value</span>
    </ChildContent>
</MTooltip>

@code{
    [Parameter]
    public object Value { get; set; } = string.Empty;
}